<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminEmployeeData">


    <TextView
        android:id="@+id/NavbarBase9"
        android:layout_width="413dp"
        android:layout_height="92dp"
        android:background="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/NavEmployeeButton9"
        android:layout_width="86dp"
        android:layout_height="79dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_people_24" />

    <ImageButton
        android:id="@+id/NavAccountButton9"
        android:layout_width="86dp"
        android:layout_height="79dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <ImageButton
        android:id="@+id/NavHolidayButton9"
        android:layout_width="86dp"
        android:layout_height="79dp"
        android:layout_marginStart="216dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_airplanemode_active_24" />

    <ImageButton
        android:id="@+id/NavLogOutButton9"
        android:layout_width="86dp"
        android:layout_height="79dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="313dp"
        android:backgroundTint="#F44336"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_exit_to_app_24"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/EmployeeName"
        android:layout_width="217dp"
        android:layout_height="59dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro_bold"
        android:inputType="textPersonName"
        android:text="Employee"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DenyButton"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="Deny"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ApproveButton"
        tools:layout_editor_absoluteY="494dp" />

    <Button
        android:id="@+id/createbutton"
        android:layout_width="136dp"
        android:layout_height="77dp"
        android:layout_marginTop="324dp"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="Delete"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/updatebutton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="133dp"
        android:layout_height="75dp"
        android:layout_marginTop="324dp"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="UPDATE"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/DenyButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ApproveButton"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginTop="496dp"
        android:backgroundTint="#7EE804"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="Approve"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/DenyButton"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="350dp"
        android:layout_height="28dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro_bold"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="Approve Holiday Requests?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="350dp"
        android:layout_height="28dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro_bold"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="If you choose to update the employee, "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="372dp"
        android:layout_height="32dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro_bold"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="enter the new data in the following boxes"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EnterFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="182dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="243dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>